<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="extended.cs.sdsu.edu.activity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="4"
        	  android:targetSdkVersion="15" />
	<uses-permission android:name="android.permission.INTERNET" />
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".ProfessorListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".SelectedProfessorDetailsActivity"
            android:label="SelectedProfessorDetailsActivity">
            <intent-filter >
                <action  android:name="cs.assignment.intent.action.PROFESSOR_DETAILS"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        
        <activity 
            android:name=".ViewProfessorCommentsActivity"
            android:label="ViewProfessorCommentsActivity">
            <intent-filter >
                <action android:name="cs.assignment.intent.action.PROFESSOR_COMMENTS"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>

</manifest>